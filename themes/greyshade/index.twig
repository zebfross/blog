{% extends "_layouts/default.twig" %}
{% block content %}
<div itemscope itemtype="http://schema.org/Blog">
{% for page in pages|sort_by("time")|reverse %}
    {% if page.id starts with "blog/" %}
		<article class="post" itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting">{% include("_includes/article.html")  %}</article>
    {% endif %}
{% endfor %}
</div>
<nav id="pagenavi">
    {% if prev_page %}
        <a href="{{prev_page}}" class="prev">Prev</a>
    {% endif %}
    {% if next_page %}
        <a href="{{next_page}}" class="next">Next</a>
    {% endif %}
    <div class="center"><a href="{{ root_url }}/blog/archives">Blog Archives</a></div>
</nav>
{% endblock %}