{% extends "_layouts/default.twig" %}

{% block content %}
{{ dump(meta) }}
{% for page in pages %}
<article itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting">
	<div class="meta">
	
		<span class="date">{% include("_includes/post/date.html")  %}{{ time }}</span>
		<br>
		<span class="tags">
			{% include("_includes/post/categories.html") %}
		</span>
	    
	</div>
	<h1 class="title" itemprop="name"><a href="{{ root_url }}{{ page.url }}" itemprop="url">{{ page.title }}</a></h1>
</article>

{% endfor %}

{% endblock %}
